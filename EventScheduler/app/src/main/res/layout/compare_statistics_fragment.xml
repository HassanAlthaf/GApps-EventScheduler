<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.compare_statistics_model.CompareStatisticsFragment">

    <Button
        android:id="@+id/generateGraphButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Click here to generate the graph"
        android:drawableStart="@android:drawable/ic_menu_today"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite" />

    <ProgressBar
        android:id="@+id/progressLoader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/generateGraphButton"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/progressLoader"
        android:id="@+id/checkBoxContainer" />

</RelativeLayout>